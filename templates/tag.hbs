{{#*inline "title"}}
laenorweb2 - {{ tag.name }}
{{/inline}}

{{#*inline "page"}}
<div class="header note-header">
  <h1><a href="/">l2</a> - {{ tag.name }}</h1>
</div>

<div class="pure-g">
  <div class="pure-u-1 pure-u-lg-3-5">
    <div class="box note">
      <div>
        Your notebook contains {{ notescount }} lines:<br>
        <ol>
          {{#each notes as |n| ~}}
          <li><a href="#{{ n.note.id }}">
            [{{ date n.updated_at }}] {{ n.title }}
          </a></li>
          {{/each~}}
        </ol>
      </div>
    </div>
  </div>
  <div class="pure-u-1 pure-u-lg-2-5">
    <div class="box">
      <button class="pure-button">New note</button>
    </div>
  </div>

  {{#each notes as |n| ~}}
  <div class="pure-u-1" id="">
    <hr>
    <a id="{{ n.note.id }}">
      <div class="box">
        <h3>{{ n.title }}</h3>
      </div>
    </a>
  </div>
  <div class="pure-u-1 pure-u-lg-3-5"><div class="box note">
    <pre>{{ n.current_text.text }}</pre>
  </div></div>

  <div class="pure-u-1 pure-u-lg-2-5">
    <div class="box info">
      <div class="info-content">
        Tags:
        <ol>
          {{#each n.tags as |tag| ~}}
          <li><a href="/tags/{{ tag.id }}"">{{ tag.name }}</a></li>
          {{/each ~}}
        </ol>
      </div>
    </div>

    <div class="box info">
      <div class="info-content">
        Shared with:
        <ol>
          {{#each n.shared_with as |user| ~}}
          <li>{{ user.name }}</li>
          {{/each ~}}
        </ol>
      </div>
    </div>

    <div class="box info">
      <div class="info-content">
        Edited by:
        <ol>
          {{#each n.texts as |text| ~}}
          <li>
            [{{ date text.0.created_at }}] {{ text.1.name }}
          </li>
          {{/each ~}}
        </ol>
      </div>
    </div>
    <div class="box">
      <button class="pure-button">Edit</button>
    </div>
  </div>
  {{/each ~}}
</div>

{{/inline}}
{{~> (parent)~}}
