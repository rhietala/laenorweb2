{{#*inline "title"}}
laenorweb2 - note
{{/inline}}

{{#*inline "head"}}
<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
{{/inline}}

{{#*inline "script"}}
<script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
<script language="javascript">
  $(document).ready(function() {
  $('.js-select2').select2({
  containerCssClass: 'select-container',
  dropdownCssClass: 'select-dropdown',
  width: 'resolve'
  });
  });
</script>
{{/inline}}

{{#*inline "page"}}
<div class="header note-header">
  <h1><a href="/">l2</a> - note</h1>
</div>

<form action="/note" method="post" accept-charset="utf-8">

<div class="pure-g">
  <div class="pure-u-1">
    <hr>
    <div class="box">
      <h3>New note</h3>
    </div>
  </div>
  <div class="pure-u-1 pure-u-lg-3-5"><div class="box note">
    <textarea name="notetext" rows="20"></textarea>
  </div></div>

  <div class="pure-u-1 pure-u-lg-2-5">
    <div class="box info">
      <div class="info-content">
        Tags:
        <div class="selection">
          <select name="tags[]" multiple="multiple" class="js-select2" style="width: 100%;">
            {{#each taggroups as |tg| ~}}
            <optgroup label="{{ tg.0.name }}">
              {{#each tg.1 as |tag| ~}}
              <option value="{{ tag.id }}">{{ tag.name }}</option>
              {{/each~}}
            </optgroup>
            {{/each~}}
          </select>
        </div>
      </div>
    </div>

    <div class="box info">
      <div class="info-content">
        Shared with:
        <div class="selection">
          <select name="users[]" multiple="multiple" class="js-select2" style="width: 100%;">
            {{#each users as |user| ~}}
            <option value="{{ user.id }}">{{ user.name }}</option>
            {{/each~}}
          </select>
        </div>
      </div>
    </div>

    {{#if note}}
      <div class="box info">
        <div class="info-content">
          Edited by:
        </div>
      </div>
    {{/if}}

    <div class="box">
      <input type="submit" class="pure-button" value="Save">
    </div>
  </div>
</div>
</form>
{{/inline}}

{{~> (parent)~}}
